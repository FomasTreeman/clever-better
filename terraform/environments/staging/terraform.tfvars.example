# =============================================================================
# Staging Environment Configuration
# Copy this file to terraform.tfvars and fill in the values
# =============================================================================

environment = "staging"
aws_region  = "us-east-1"

# VPC Configuration
vpc_cidr           = "10.1.0.0/16"
enable_nat_gateway = true

# RDS Configuration
rds_instance_class = "db.r6g.large"
rds_multi_az       = true

# WAF Configuration
waf_rate_limit     = 3000
enable_waf_logging = true

# ECS Container Image Tags
bot_image_tag            = "latest"
ml_image_tag             = "latest"
data_ingestion_image_tag = "latest"

# Container Resources (staging - moderate)
bot_cpu    = 512
bot_memory = 1024
ml_cpu     = 1024
ml_memory  = 2048

# Monitoring
alarm_email = "staging-alerts@example.com"

# ACM Certificate (must be created manually in AWS Console)
acm_certificate_arn = "arn:aws:acm:us-east-1:123456789012:certificate/xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"
